<h2>Lista de categorias</h2>
<hr />
<a href="/admin/categories/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categories}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{name}}</h4>
      <small>Slug: {{slug}}</small>
      <small>Data de criação: {{date}}</small><br />
      <a href="/admin/categories/edit/{{_id}}"><button
          class="btn btn-success mt-4"
        >Editar categoria</button></a>
      <form action="/admin/categories/delete" method="POST">
        <input type="hidden" name="id" value="{{_id}}" />
        <button
          type="submit"
          class="btn btn-danger mt-2 btn--show-modal"
        >Excluir categoria</button>
      </form>
    </div>
  </div>
{{else}}
  <h4 class="mt-3">Não há categorias registradas</h4>

{{/each}}
