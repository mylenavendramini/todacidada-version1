    <div class="modal--singup hidden">
      <button class="btn--close-modal">&times;</button>
      <h2 class="modal__header">
        <span class="highlight">Sing Up</span>
      </h2>
      <form class="modal__form">
        <label>First Name</label>
        <input type="text" />
        <label>Last Name</label>
        <input type="text" />
        <label>Email Address</label>
        <input type="email" />
        <button class="btn">Next step &rarr;</button>
        <button
          style="color: var(--color-primary)"
          class="btn btn--change--modal btn--SignUpToChange"
        >
          <p style="color: #222">Already signed up?</p>
          Go to login
        </button>
      </form>
    </div>
    <div class="overlay hidden"></div>

    <div class="modal--login hidden log-in">
      <button class="btn--close-modal">&times;</button>
      <h2 class="modal__header">
        <span class="highlight">Log in</span>
      </h2>
      <form class="modal__form">
        <label>First Name</label>
        <input type="text" />
        <label>Last Name</label>
        <input type="text" />
        <label>Email Address</label>
        <input type="email" />
        <label>Password</label>
        <input type="password" />
        <button class="btn">Next step &rarr;</button>
        <button
          style="color: var(--color-primary)"
          class="btn btn--change--modal btn--loginToChange"
        >
          <p style="color: #222">Don't have an account?</p>
          Sing Up
        </button>
      </form>
