        <a class="btn btn-dark btn-sm" href="/courses/{{slug}}/">Saiba mais</a>
      </div>
    </div>
  {{else}}
  {{/each}}

  <div>
    <a href="/"><button class="btn btn-success mt-4">Voltar para a página
        inicial</button></a>
    <br />
    <br />
  </div>
</div>

