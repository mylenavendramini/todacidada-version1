<div class="container">
  <h4>Todos os cursos: </h4>
  <br />
  {{#each courses}}
    {{!-- <a href="/courses/{{slug}}"><h5>{{name}}</h5></a> --}}
    <div class="card mt-4">
      <div class="card-body">
